@model List<Slide>
@{
    ViewData["Title"] = "Slayt Listesi";
}

<h1>Slayt Listesi</h1>
<p>
    <a asp-action="Create" class="btn btn-primary">Yeni Slayt Oluştur</a>
</p>
<table class="table table-hover">
    <thead>
        <tr>
            <th></th>
            <th>@Html.DisplayNameFor(model => model.FirstOrDefault().Name)</th>
            <th>@Html.DisplayNameFor(model => model.FirstOrDefault().OrderNo)</th>
            <th>Aktif</th>
            <th width="125px"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <a href="~/uploads/slides/@item.SlideUrl" target="_blank"><img src="~/uploads/slides/@item.SlideUrl" alt="@item.Name" width="100" height="42" /></a>                   
                </td>
                <td>@item.Name</td>
                <td>@item.OrderNo</td>
                <td>
                    @if (item.IsActive)
                    {
                        <span class="badge bg-success">Evet</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">Hayır</span>
                    }
                </td>
                <td>
                    <a class="btn btn-sm btn-outline-warning" asp-action="Edit" asp-route-id="@item.Id">Düzenle</a>
                    <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>

