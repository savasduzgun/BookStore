@model List<Writer>
@{
    ViewData["Title"] = "Yazar Listesi";
}

<h1>Yazar Listesi</h1>
<p>
<a asp-action="Create" class="btn btn-primary">Yeni Yazar Oluştur</a>
</p>
<table class="table table-hover">
    <thead>
        <tr>
            @* <th width="100px">@Html.DisplayNameFor(model => model.FirstOrDefault().Id)</th> *@
            <th>@Html.DisplayNameFor(model => model.FirstOrDefault().NameSurname)</th>
            <th width="125px"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                @* <td>@item.Id</td> *@
                <td>@item.NameSurname</td>
                <td>
                    <a class="btn btn-sm btn-outline-warning" asp-action="Edit" asp-route-id="@item.Id">Düzenle</a>
                    <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>